<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SnapLabel.Controls.TileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="TileControl"
    HeightRequest="140"
    WidthRequest="150">

    <Border Background="{Binding TileBackground, Source={x:Reference TileControl}}" HeightRequest="140">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16" />
        </Border.StrokeShape>
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="8"
            VerticalOptions="Center">
            <Image
                Aspect="AspectFit"
                HeightRequest="40"
                Source="{Binding IconSource, Source={x:Reference TileControl}}"
                WidthRequest="40" />
            <Label
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalTextAlignment="Center"
                Text="{Binding Title, Source={x:Reference TileControl}}"
                TextColor="White" />
            <Label
                FontSize="Small" 
                TextColor="White"
                HorizontalTextAlignment="Center"
                Text="{Binding Subtitle, Source={x:Reference TileControl}}" />
        </VerticalStackLayout>
        <Border.Behaviors>
            <mct:TouchBehavior
                Command="{Binding TapCommand, Source={x:Reference TileControl}}"
                DefaultOpacity="1.0"
                DefaultScale="1.0"
                HoveredBackgroundColor="#2882D1"
                PressedOpacity="0.8"
                PressedScale="0.95" />
        </Border.Behaviors>
    </Border>
</ContentView>
