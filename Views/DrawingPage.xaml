<ContentPage
    x:Class="SnapLabel.Views.DrawingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:constant="clr-namespace:SnapLabel.Constants"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:SnapLabel.ViewModels"
    Title="Draw your label"
    x:DataType="vm:DrawingPageViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding PrintCommand}" IsEnabled="{Binding IcanPrint}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="Mat"
                    Glyph="{Static constant:FontsConstants.Print}"
                    Color="{AppThemeBinding Dark={StaticResource White},
                                            Light={StaticResource Black}}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid>
        <!--  Drawing canvas fills entire space  -->
        <toolkit:DrawingView
            DrawingLineCompletedCommand="{Binding HandleDrawingCompletedCommand}"
            HeightRequest="{Binding CanvasHeight}"
            HorizontalOptions="Center"
            IsMultiLineModeEnabled="True"
            LineColor="Black"
            LineWidth="2"
            Lines="{Binding Lines}"
            VerticalOptions="Center"
            WidthRequest="{Binding CanvasWidth}" />


        <!--  Floating clear button in bottom-right corner  -->
        <Button
            Margin="20"
            Command="{Binding ClearCanvasCommand}"
            CornerRadius="60"
            FontFamily="Mat"
            FontSize="30"
            HeightRequest="60"
            HorizontalOptions="End"
            Text="{Static constant:FontsConstants.Delete}"
            VerticalOptions="End"
            WidthRequest="60" />
    </Grid>
</ContentPage>