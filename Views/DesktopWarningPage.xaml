<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SnapLabel.Views.DesktopWarningPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:constant="clr-namespace:SnapLabel.Constants"
    xmlns:vm="clr-namespace:SnapLabel.ViewModels"
    x:DataType="vm:DesktopWarningPageViewModel"
    NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
        <Label
            FontFamily="Mat"
            FontSize="100"
            HorizontalTextAlignment="Center"
            Text="{Static constant:FontsConstants.Error}"
            TextColor="Red" />

        <Label
            FontSize="18"
            HorizontalTextAlignment="Center"
            Text="This application does not support desktop devices." />

        <buttons:SfButton
            Margin="10"
            Command="{Binding CloseAppCommand}"
            HorizontalOptions="Center"
            Style="{DynamicResource RippleButtonStyle}"
            Text="Close" />

    </VerticalStackLayout>
</ContentPage>