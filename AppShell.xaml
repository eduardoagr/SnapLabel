<Shell
    x:Class="SnapLabel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:constant="clr-namespace:SnapLabel.Constants"
    xmlns:views="clr-namespace:SnapLabel.Views"
    Title="SnapLabel"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate views:AuthenticationPage}" Route="AuthenticationPage" />


    <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage" />


    <ShellContent ContentTemplate="{DataTemplate views:InventoryPage}" Route="InventoryPage" />


    <ShellContent ContentTemplate="{DataTemplate views:DrawingPage}" Route="DrawingPage" />

</Shell>